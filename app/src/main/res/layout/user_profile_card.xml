<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/user_profile_card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/cardProfilePicture"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="Profile picture"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <!-- Username with Gender Icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/cardUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@username"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/card_text_color"
                android:maxLines="1"
                android:ellipsize="end" />

            <ImageView
                android:id="@+id/cardGenderIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:contentDescription="Gender icon"
                android:src="@drawable/male_icon"
                app:tint="#4A90E2" />

        </LinearLayout>

        <!-- Bio -->
        <TextView
            android:id="@+id/cardBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="User bio goes here..."
            android:textSize="14sp"
            android:textColor="@color/card_text_color"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp" />

        <!-- Want to Learn Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Want to Learn:"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/cardWantToLearn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JavaScript, Python, React..."
                android:textSize="13sp"
                android:textColor="@color/card_text_color"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Spacer to push content to bottom if needed -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Bottom section with level/status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/cardStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Student"
                android:textSize="11sp"
                android:textColor="@color/card_text_color"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
