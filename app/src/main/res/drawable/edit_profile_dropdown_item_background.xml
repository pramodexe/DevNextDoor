<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Edit Profile Dropdown Item Background - Interactive dropdown item styling
    
    This drawable defines different visual states for items in dropdown menus
    within the edit profile screen. Think of it like a button that changes
    appearance when you hover over it, click it, or select it.
    
    Used for:
    - Dropdown menu items in profile editing forms
    - Spinner selections (like gender, availability options)
    - Interactive list items that respond to user interaction
    
    States handled:
    - Focused: When user navigates to the item (2dp border for emphasis)
    - Selected: When item is chosen (1dp border)
    - Pressed: When user is actively clicking (1dp border)
    - Hovered: When cursor is over the item (1dp border)
    - Default: Normal appearance (no border)
    
    All states use themed colors for consistency with the app's design system.
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state - when keyboard navigation highlights this item -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/edit_profile_dropdown_background" />
            <stroke android:width="2dp" android:color="@color/edit_profile_text_color" />
        </shape>
    </item>
    
    <!-- Selected state - when this item is the current choice -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/edit_profile_dropdown_background" />
            <stroke android:width="1dp" android:color="@color/edit_profile_text_color" />
        </shape>
    </item>
    
    <!-- Pressed state - when user is actively touching/clicking -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/edit_profile_dropdown_background" />
            <stroke android:width="1dp" android:color="@color/edit_profile_text_color" />
        </shape>
    </item>
    
    <!-- Hovered state - when cursor is positioned over the item -->
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/edit_profile_dropdown_background" />
            <stroke android:width="1dp" android:color="@color/edit_profile_text_color" />
        </shape>
    </item>
    
    <!-- Default state - normal appearance when not interacting -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/edit_profile_dropdown_background" />
        </shape>
    </item>
</selector>
