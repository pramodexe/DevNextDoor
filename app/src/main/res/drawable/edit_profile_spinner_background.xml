<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- Background shape -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/edit_profile_dropdown_background" />
                    <corners android:radius="8dp" />
                    <stroke android:width="1dp" android:color="@color/edit_profile_dropdown_border" />
                </shape>
            </item>
            <!-- Dropdown arrow -->
            <item
                android:drawable="@drawable/ic_arrow_drop_down"
                android:gravity="end|center_vertical"
                android:right="12dp" />
        </layer-list>
    </item>
</selector>
