<?xml version="1.0" encoding="utf-8"?>
<!-- 
    New Badge Background - Red notification badge
    
    This drawable creates a small red badge with rounded corners, typically
    used to show "new" items or unread counts. Think of it like the red
    notification dots you see on app icons or message indicators.
    
    Used for:
    - "New" labels on content
    - Unread message counters
    - Notification indicators
    - Alert badges
    
    Visual properties:
    - Bright red background (#FF4444) to grab attention
    - 8dp rounded corners for a modern pill shape
    - Built-in padding (6dp horizontal, 2dp vertical) for text spacing
    - Small and compact design for overlay use
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#FF4444" />
    <corners android:radius="8dp" />
    <padding 
        android:left="6dp"
        android:right="6dp"
        android:top="2dp"
        android:bottom="2dp" />
</shape>
